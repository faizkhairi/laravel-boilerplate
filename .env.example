APP_NAME=Laravel
APP_ENV=local
# Generate with: php artisan key:generate (after copying this file to .env)
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Production Features (100% ready out of the box):
# - RBAC: Spatie Laravel Permission (roles: admin, user)
# - Audit Logging: Tracks all auth events (login, logout, register, password reset, etc.)
# - Structured Logging: Auto-enriched with user_id, IP, URL, method
# - API Documentation: Scramble auto-generated OpenAPI 3.0 at /docs/api
# - Custom Error Pages: Branded 404, 500, 403
# - Professional Email Templates: Responsive HTML layouts (welcome, password-reset, verify-email)
# - Stripe Integration (opt-in): Full checkout + webhook handling

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# Logging: Use 'single' for dev. For production, set LOG_STACK=daily for log rotation.
# LOG_DAILY_DAYS controls retention (e.g., 14 = keep 14 days of logs).
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DAILY_DAYS=14
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Default: PostgreSQL (use docker-compose up -d). Alternative: mysql
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=laravel_boilerplate
DB_USERNAME=postgres
DB_PASSWORD=postgres

# MySQL alternative (uncomment and set DB_CONNECTION=mysql)
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=database

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail: Mailpit for local (docker-compose). Set MAIL_MAILER=smtp and SMTP vars for production.
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Optional: Stripe integration (opt-in, disabled by default)
# Endpoints: POST /stripe/checkout (create checkout session), POST /stripe/webhook (handle events)
# Webhook events handled: checkout.session.completed, customer.subscription.{updated,deleted}, invoice.payment_{succeeded,failed}
# Get keys from: https://dashboard.stripe.com/test/apikeys
# Get webhook secret from: https://dashboard.stripe.com/test/webhooks (add endpoint: /stripe/webhook)
# STRIPE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
